# ==========================================
# SYSTEM & SECURITY (General Configuration)
# ==========================================
# Secret for session and encryption (User should change this to a strong secret)
SESSION_SECRET=${YourSuperSecretSessionKey_ChangeMe!}
BCRYPT_SALT=12
ALGORITHM=aes-256-gcm

# Default Admin account for the system
ADMIN_USERNAME=${ADMIN_USERNAME}
ADMIN_PASSWORD=${ADMIN_PASSWORD}

# ==========================================
# 2. ELASTICSEARCH (Search Engine)
# ==========================================
ES_LOCAL_VERSION=8.11.1
ES_LOCAL_USERNAME=elastic
# Password for Elastic (Used by both Server and Connector)
ES_LOCAL_PASSWORD=${ES_LOCAL_PASSWORD}

ES_LOCAL_URL=http://host.docker.internal:9200
ES_LOCAL_PORT=9200

# Resource configuration for Elastic
ES_LOCAL_HEAP_INIT=128m
ES_LOCAL_HEAP_MAX=1g
ES_LOCAL_DISK_SPACE_REQUIRED=1gb

# ==========================================
# 3. MONGODB (Database)
# ==========================================
MONGODB_INITDB_ROOT_USERNAME=root
MONGODB_INITDB_ROOT_PASSWORD=rootpassword
MONGODB_DATABASE_NAME=dsp_db

# Connection string (Note: "mongodb" is the service name in docker-compose)
MONGODB_URI=mongodb://root:rootpassword@mongodb:27017/dsp_db?directConnection=true&authSource=admin

# ==========================================
# 4. SERVER CONFIGURATION
# ==========================================
SERVER_PORT=4000
# Endpoint of the scan service (running inside the server docker container)
CLOUDSPLOIT_ENDPOINT=https://springpeachvinh.id.vn/v1

# Path to dynamic config file (Server will write Connector ID to this file)
# This is the path INSIDE the container
CONNECTOR_ENV_PATH=/app/config/connector.env

# ==========================================
# 5. CLOUD CREDENTIALS (User input for Server use)
# ==========================================
# AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=

# Azure
AZURE_APPLICATION_ID=
AZURE_KEY_VALUE=
AZURE_DIRECTORY_ID=
AZURE_SUBSCRIPTION_ID=
