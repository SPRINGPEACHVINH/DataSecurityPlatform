        {
          "name": "Search by Regex Pattern",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"search_type\": \"pattern\",\n  \"pattern\": \"\\\\b[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\\\.[A-Z|a-z]{2,}\\\\b\",\n  \"index_name\": \"files_connector\"\n}"
            },
            "url": {
              "raw": "http://localhost:4000/api/dashboard/search",
              "protocol": "http",
              "host": ["localhost"],
              "port": "4000",
              "path": ["api", "dashboard", "search"]
            },
            "description": "Search documents by regex pattern (email pattern example)"
          }
        }
